<div class="container mt-4">
    {% for message in app.flashes('notice') %}
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{ message }}
    </div>
    {% endfor %}
    {% for product in products %}
    <div class="col-md-8">
        <div class="card mb-3" style="width: 740px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    {% if product.picture %}
                    <img src="{{ vich_uploader_asset (product.picture, 'imgfile')}}" alt="{{product.name}}" style="width:20%; height:auto; display:block; margin:auto;">
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{product.name}}</h5>
                        <p class="card-text">{{product.tags}}</p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>

                        <form method="post" action="{{ path ('cart.add')}}">
                            <input type="hidden" name="panier" value="{{ product.id }}">
                            <button type="submit" class="btn btn-success float-right mb-2">
                                <i class="fas fa-shopping-cart mr-1"></i>
                                Ajouter
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>