{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
<div class="bg-light p-3">
    <h1>Votre panier</h1>
</div>
 <div class="container">
     {% if items %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{item.product.name}}</td>
                        <td>{{item.product.price}}</td>
                        <td>{{item.quantity}}</td>
                        <td>{{item.product.price * item.quantity}}</td>
                        <td>
                            <a href="{{path('cart.remove', {'id': item.product.id})}}" class="btn btn-danger btn-sm">
                             <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total : </td>
                    <td>{{ total}}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
     {% else %}
         <h3>Oupps! aucun produit dans le panier</h3>
     {% endif %}
 </div>
{% endblock %}
