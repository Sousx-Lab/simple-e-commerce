<form method="post" action="{{ path ('cart.add')}}">
        <input type="hidden" name="product_id" value="{{ product.id }}">
        <input type="hidden" name="referer" value="{{ app.request.uri }}"/>
        <input type="hidden" name="add_cart" value="{{csrf_token ("add_cart_token") }}">
        <button type="submit" class="btn btn-success float-right mb-2">
            <i class="fas fa-shopping-cart mr-1"></i>
            Ajouter
        </button>
    </form>